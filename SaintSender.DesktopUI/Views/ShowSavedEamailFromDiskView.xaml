<Window x:Class="SaintSender.DesktopUI.Views.ShowSavedEamailFromDisk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaintSender.DesktopUI.Views"
        mc:Ignorable="d"
        Title="ShowSavedEamailFromDisk" Height="450" Width="800">
    <Grid>
        <ListView ItemsSource="{Binding Path=EmailsToDisplay}" Margin="10,13,10,7">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Sender" DisplayMemberBinding="{Binding Path=Sender}"  />
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Path=Subject}" />
                    <GridViewColumn Header="Preview" DisplayMemberBinding="{Binding Path=Body}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
