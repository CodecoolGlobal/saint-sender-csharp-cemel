<Window x:Class="SaintSender.DesktopUI.Views.SingleMail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaintSender.DesktopUI.Views"
        mc:Ignorable="d"
        Title="SingleMail" Height="200" Width="750">
    <Grid>

        <Grid>
            <StackPanel Name = "Display">
                <StackPanel >
                    <TextBlock Text = "Sender: "/>
                    <TextBlock Margin = "10" Text="{Binding Sender}"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text = "Subject: " />
                    <TextBlock Margin = "10" Text="{Binding Subject}" />
                </StackPanel>
                
                <StackPanel>
                    <TextBlock Text = "Body: " />
                    <TextBlock Margin = "10" Text="{Binding Body}"/>
                </StackPanel>
            </StackPanel>
        </Grid>


    </Grid>
</Window>
