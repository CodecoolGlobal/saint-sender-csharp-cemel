<Window x:Class="SaintSender.DesktopUI.Views.WriteMail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaintSender.DesktopUI.Views"
        mc:Ignorable="d"
        Title="WriteMail" Height="450" Width="800">
    <StackPanel Margin="20">
        <Label Content="_To:" Target="{Binding ElementName=txtTo}" />
        <TextBox Name="txtTo" />
        <Label Content="_Subject:" Target="{Binding ElementName=txtSubject}" />
        <TextBox Name="txtSubject"/>
        <Label Content="_Message:" Target="{Binding ElementName=txtMessage}" />
        <TextBox Name="txtMessage" Height="230" />

        <Button x:Name="btnSaveItem">Save</Button>
    </StackPanel>
</Window>
