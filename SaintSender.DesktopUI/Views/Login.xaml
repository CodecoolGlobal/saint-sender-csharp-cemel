<Window x:Class="SaintSender.DesktopUI.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaintSender.DesktopUI.Views"
        mc:Ignorable="d"
        Title="Login" Height="190" Width="360">
    <StackPanel Margin="10">
        <Label Content="_Email:" Target="{Binding ElementName=txtEmail}" />
        <TextBox Name="txtEmail" Width="140" HorizontalAlignment="Left" />
        <Label Content="_Password:" Target="{Binding ElementName=txtPassword}" />
        <PasswordBox Name="txtPassword" Width="140" HorizontalAlignment="Left" />
        <Button x:Name="btnSignIn" Margin="10" Width="50" HorizontalAlignment="Right" Click="btnSignIn_Click">Sign In</Button>
    </StackPanel>
</Window>
