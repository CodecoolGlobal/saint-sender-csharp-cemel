<Window x:Class="SaintSender.DesktopUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaintSender.DesktopUI"
        mc:Ignorable="d"
        Title="SainSender" Height="450" Width="800" Loaded="Window_Loaded">

    <ListView ItemsSource="{Binding Path=EmailsToDisplay}">
        <ListView.ItemContainerStyle>
        <Style TargetType="{x:Type ListViewItem}">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            </Style>
        </ListView.ItemContainerStyle>
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Sender" DisplayMemberBinding="{Binding Path=Sender}"  />
                <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Path=Subject}" />
                <GridViewColumn Header="Preview" DisplayMemberBinding="{Binding Path=Body}" />
            </GridView>
        </ListView.View>
        <!--<Button Content="Button" Height="100" Width="75"/>-->
    </ListView>

</Window>
